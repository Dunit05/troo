<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" fillHeight="false" prefHeight="800.0" prefWidth="1000.0" styleClass="bg" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.troo.controllers.Success">
   <children>
      <AnchorPane prefHeight="651.0" prefWidth="485.0" styleClass="dark">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="651.0" prefWidth="485.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="155.0" prefWidth="485.0">
                     <children>
                        <ImageView fitHeight="155.0" fitWidth="349.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/logo-transparent.png" />
                           </image>
                           <HBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                  </HBox>
                  <Label fx:id="greetingLabel" alignment="TOP_CENTER" prefHeight="41.0" prefWidth="331.0" text="Thank you for placing an order" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="23.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="247.0" prefWidth="485.0">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <children>
                        <Label fx:id="orderNumber" alignment="TOP_CENTER" prefHeight="35.0" prefWidth="499.0" text="Order Number# " textFill="WHITE">
                           <font>
                              <Font name="Calibri" size="23.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="deliveryTime" alignment="TOP_CENTER" prefHeight="40.0" prefWidth="492.0" text="Your Order will take: " textFill="WHITE">
                           <font>
                              <Font name="Calibri" size="23.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="qrCode" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="111.0" prefWidth="485.0">
                     <children>
                        <Button fx:id="homeButton" mnemonicParsing="false" onAction="#home" prefHeight="46.0" prefWidth="310.0" styleClass="btn-secondary" text="Home">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Button>
                        <Label fx:id="orLabel" alignment="CENTER" prefHeight="17.0" prefWidth="29.0" text="Or" textFill="WHITE">
                           <font>
                              <Font name="Calibri" size="15.0" />
                           </font>
                        </Label>
                        <Button fx:id="logoutLabel" mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="310.0" styleClass="btn-primary" text="Logout">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </VBox>
                  <Label fx:id="helpLabel" alignment="CENTER" prefHeight="18.0" prefWidth="238.0" text="Need help? Email troo@furot.tech" textFill="WHITE">
                     <font>
                        <Font name="Calibri" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </Label>
                  <CheckBox fx:id="darkModeCheckBox" mnemonicParsing="false" onAction="#setDarkModeSuccessScreen" prefHeight="22.0" prefWidth="481.0" text="Dark Mode" textFill="WHITE">
                     <font>
                        <Font name="Calibri Italic" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </CheckBox>
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </AnchorPane>
   </children>
   <padding>
      <Insets bottom="50.0" top="50.0" />
   </padding>
</HBox>
